# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]

# Change these settings to your own preference
indent_style = space
indent_size = 4
max_line_length = 130

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# The rules below applied only for files with extensions *.js, *.jsx
[*.{js,jsx}]
indent_style = space
indent_size = 4

# The rules below applied only for files with extensions *.json, *.css, *.scss
[*.{json,css,scss}]
indent_style = space
indent_size = 2

# The rules below applied only for files with extensions *.md
[*.md]
trim_trailing_whitespace = false
